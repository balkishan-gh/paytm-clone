{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(auth)/signup/page.jsx",
    "app/(auth)/signin/page.jsx",
    "app/send/[...user]/page.jsx"
  ],
  "exclude": ["node_modules"]
}
